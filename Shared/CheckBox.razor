<input class="p-2"
       @bind-value="Checked"
       type="checkbox"
       disabled="@Disabled" />

@code {
    private bool _value;

    [Parameter]
    public bool Checked
    {
        get => _value;
        set
        {
            if (_value == value) return;
            _value = value;
            CheckedChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<bool> CheckedChanged { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}
